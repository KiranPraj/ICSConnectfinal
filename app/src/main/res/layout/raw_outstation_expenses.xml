<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/textforoutstation">
            </TextView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="From"

                    >
            </TextView>
            <EditText
                    android:layout_width="0dp"
                    android:padding="@dimen/space5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/from_localtravel"
                    >

            </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="To"

                    android:padding="@dimen/space5"
                    >
            </TextView>
            <EditText
                    android:layout_width="0dp"

                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/to_localtravel"
                    android:padding="@dimen/space5"

                    >

            </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/locationView"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Location"

                    android:padding="@dimen/space5"
                    >
            </TextView>
            <EditText
                    android:layout_width="0dp"

                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/location"
                    android:padding="@dimen/space5"

                    >

            </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Expenses"

                    android:padding="@dimen/space5"
                    >
            </TextView>
            <EditText
                    android:layout_width="0dp"

                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/expenses_boarding"
                    android:padding="@dimen/space5"

                    >

            </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="IGST"
                    >
            </TextView>
            <EditText
                    android:layout_width="0dp"
                    android:padding="@dimen/space5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/igst_boarding"

                    >

            </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="CGST"
                    >
            </TextView>
            <EditText
                    android:layout_width="0dp"
                    android:padding="@dimen/space5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/boarding_cgst"

                    >

            </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="SGST"
                    >
            </TextView>
            <EditText
                    android:layout_width="0dp"
                    android:padding="@dimen/space5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/_boarding_sgst"
                    >

            </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="GST No."
                    >
            </TextView>
            <EditText
                    android:layout_width="0dp"
                    android:padding="@dimen/space5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/boarding_gst_no"

                    >

            </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="Service Provider"
                    >
            </TextView>
            <EditText
                    android:layout_width="0dp"
                    android:padding="@dimen/space5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/boarding_service_provider"

                    >

            </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Paid By"
                    >
            </TextView>
            <RadioGroup
                    android:id="@+id/expensesoutstation_radio_grp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@+id/r_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="@color/colorTextBlack"
                        android:text="Finance"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/space10"

                        />

                <RadioButton
                        android:id="@+id/r_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Self"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/space15"
                        tools:ignore="SmallSp"/>

            </RadioGroup>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_month"
                    android:textAlignment="center"
                    android:text="Invoiceable"
                    >
            </TextView>
            <RadioGroup
                    android:id="@+id/innvoiceable_radio_grp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@+id/invoice_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="@color/colorTextBlack"
                        android:text="Yes"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/space10"

                        />

                <RadioButton
                        android:id="@+id/invoice_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/space15"
                        tools:ignore="SmallSp"/>

            </RadioGroup>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Narration"
                    >
            </TextView>
            <EditText
                    android:layout_width="0dp"
                    android:padding="@dimen/space5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/narrration_boarding"

                    >

            </EditText>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/space5"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Choose File"
                    >
            </TextView>
            <Button
                    android:layout_width="0dp"
                    android:padding="@dimen/space5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownbackground"
                    android:id="@+id/chose_file_boarding"
                    android:text="Choose File">

            </Button>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>




</LinearLayout>